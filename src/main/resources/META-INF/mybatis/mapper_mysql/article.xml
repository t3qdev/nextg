<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="kr.co.yonhapnews.domain.article.svc.ArticleDAO">

	<cache/>

	<insert id="insCrsLog" parameterType="ArticleDVO">
		<![CDATA[ 		
		INSERT INTO ARTICLE (title,content,writer,state,regdate) values (#{TITLE},#{CONTENT},#{WRITER},'R',NOW())
		]]>	
	</insert>
	<select id="selLog" resultType="ArticleDVO" parameterType="ArticleDVO">
		<![CDATA[
			SELECT *
			FROM ARTICLE  
		]]> 
	</select>
</mapper>	